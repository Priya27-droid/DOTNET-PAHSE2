@model HandsOnHeplerMethods.Models.Login
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container">
    @using (Html.BeginForm("Validate", "User","POST"))
	{
		<table class="table table-bordered">
			<tr>
				<td>Username</td>
				<td>@Html.TextBoxFor(m=>m.Uname)</td>
				<td>@Html.ValidationMessageFor(m=>m.Uname)</td>
			</tr>
			<tr>
				<td>Password</td>
				<td>@Html.PasswordFor(m=>m.Pwd)</td>
				<td>@Html.ValidationMessageFor(m=>m.Pwd)</td>
			</tr>
			<tr>
				<td colspan="2">
					<input type="submit" value="SingIn" />
				</td>
			</tr>
			<tr>
				<td colspan="2">
					@Html.ActionLink("SignUp", "Create")
				</td>
			</tr>
		</table>
	}
</div>
